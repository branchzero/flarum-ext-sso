{
    "name": "flarum/flarum-ext-sso",
    "description": "Allow users to log in with sso.",
    "type": "flarum-extension",
    "keywords": ["authentication"],
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Richard",
            "email": "richard.julien@gmail.com"
        }
    ],
    "require": {
        "flarum/core": "^0.1.0-beta.5",
        "jasny/sso": "^0.1.8"
    },
    "autoload": {
        "psr-4": {
            "Flarum\\Auth\\Sso\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "flarum-extension": {
            "title": "SSO Login",
            "icon": {
                "name": "sign-in",
                "backgroundColor": "#eee",
                "color": "#333"
            }
        },
        "flarum-locale": {
            "code": "en",
            "title": "English"
        }
    }
}
